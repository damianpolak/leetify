{
  "name": "leetify",
  "version": "2.1.0",
  "description": "Convert string to L33T Sp34k!",
  "main": "dist/index.js",
  "scripts": {
    "test": "vitest --run --reporter verbose",
    "test:watch": "vitest",
    "clean": "rimraf dist",
    "copy-files": "copyfiles -f index.js index.d.ts dist",
    "build": "npm run clean && npm run copy-files",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/damianpolak/leetify.git"
  },
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "keywords": [
    "leet",
    "speak",
    "1337",
    "convert",
    "string",
    "L33T"
  ],
  "author": {
    "name": "Damian Polak",
    "email": "deeppurple044@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/damianpolak/leetify/issues"
  },
  "homepage": "https://github.com/damianpolak/leetify#readme",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.0",
    "rimraf": "^6.0.1",
    "vitest": "^1.3.1"
  }
}
